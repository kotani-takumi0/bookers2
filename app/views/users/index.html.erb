<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(current_user) do %>
        <i class="fa-solid fa-user-gear user-btn btn-ac"></i>
      <% end %>

      <div>
        <h1>New book</h1>
        <%= form_with model: @book do |f| %>
          <h4>title</h4>
          <%= f.text_field :title %>
          <h4>opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>

    </div>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="book_table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <th><%= image_tag user.get_profile_image(80,80) %></th>
              <th><%= user.name %></th>
              <th><%= link_to "Show", user_path(user.id) %></th>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>


  </div>
</div>

